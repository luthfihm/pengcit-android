<ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context="com.gitlab.alvin_nt.if4073_pengcit.EdgeDetectionSecondOrderActivity">

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewInput" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Image"
                android:id="@+id/button_PickImage" android:layout_below="@+id/imageViewInput" android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewSobel"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_below="@+id/button_PickImage"/>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/imageViewPrewit"
                   android:layout_centerHorizontal="true" android:layout_below="@+id/imageViewSobel"/>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/imageViewScharr"
                   android:layout_centerHorizontal="true" android:layout_below="@+id/imageViewSobel"/>
    </RelativeLayout>
</ScrollView>